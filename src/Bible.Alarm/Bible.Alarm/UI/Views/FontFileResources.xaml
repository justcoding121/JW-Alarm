<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="FontNameResources.FontFileResources"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <OnPlatform x:Key="FontAwesomeSolidId" x:TypeArguments="x:String">
        <On Platform="iOS" Value="Font Awesome 5 Free" />
        <On Platform="Android" Value="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid" />
        <On Platform="UWP, WinRT, WinPhone" Value="Assets/Fonts/Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free" />
    </OnPlatform>
    <Style x:Key="FontAwesomeSolid" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSolidId}" />
    </Style>
</ResourceDictionary>