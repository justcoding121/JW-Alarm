<UserControl
    x:Class="JW.Alarm.Core.UWP.Views.Shared.LanguageSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JW.Alarm.Core.UWP.Views.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   Text="Languages" 
                   FontSize="18"
                   FontWeight="Bold" 
                   Margin="10 2 2 2" 
                   VerticalAlignment="Center">
        </TextBlock>
        <Rectangle HorizontalAlignment="Stretch" Fill="Gray" Height="1" Grid.Row="1" />
        <Grid HorizontalAlignment="Stretch" Grid.Row="2" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"  Orientation="Horizontal">
                <SymbolIcon Symbol="Zoom" Foreground="SlateBlue"/>
            </StackPanel>
            <TextBox Grid.Column="1" 
                             PlaceholderText="Search languages"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch"                        
                             HorizontalTextAlignment="Left" Foreground="Black" 
                             Margin="5 0 0 0"
                             BorderThickness="0"></TextBox>

        </Grid>
        <ListView HorizontalContentAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Name="LanguageListView" 
                  Grid.Row="3" 
                  ItemsSource="{Binding Languages}" 
                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                  SelectionChanged="LanguageListView_SelectionChanged">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock HorizontalAlignment="Left" 
                               TextAlignment="Left"
                               Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
