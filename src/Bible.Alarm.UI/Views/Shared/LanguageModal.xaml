<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bible.Alarm.UI.Views.LanguageModal"
             xmlns:converters="clr-namespace:JW.Alarm.UI.Views.Converters"
             xmlns:behaviours="clr-namespace:JW.Alarm.UI.Views.Behaviours">
    <ContentPage.Resources>
        <converters:ItemTappedEventArgsConverter x:Key="itemTappedConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid BackgroundColor="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" 
                   Text="Languages" 
                   VerticalTextAlignment="Center"
                   HeightRequest="32"
                   Font="Bold,18"
                   Margin="10,2,2,2" 
                   VerticalOptions="Fill">
            </Label>
            <BoxView HorizontalOptions="Fill" Color="Gray" HeightRequest="1" Grid.Row="1" />
            <Grid HorizontalOptions="Fill" Grid.Row="2" Margin="2" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <SearchBar Grid.Column="0" 
                             HeightRequest="32"
                             Placeholder="Search languages"
                             VerticalOptions="Center"
                             HorizontalOptions="Fill"
                             HorizontalTextAlignment="Start" 
                             TextColor="Black"
                             Margin="5,0,0,0"
                             Text="{Binding LanguageSearchTerm, Mode=TwoWay}"
                             Grid.ColumnSpan="2"/>

            </Grid>
            <ListView HorizontalOptions="Fill"
                  BackgroundColor="White"
                  x:Name="LanguageListView" 
                  MinimumHeightRequest="300"
                  MinimumWidthRequest="250"
                  Grid.Row="3" 
                  SelectionMode="Single"
                  ItemsSource="{Binding Languages}" 
                  SelectedItem="{Binding SelectedLanguage, Mode=OneWay}">
                <ListView.Behaviors>
                    <behaviours:EventToCommandBehavior EventName="ItemTapped" Command="{Binding SelectLanguageCommand}"
                                                       EventArgsConverter="{StaticResource itemTappedConverter}" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label HeightRequest="45" 
                               HorizontalOptions="Start"
                               Margin="8,0,0,0"
                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"
                               Text="{Binding Name}"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Row="4" HorizontalOptions="Fill" 
                VerticalOptions="Fill"
                HeightRequest="32"
                Margin="2"
                Command="{Binding CloseModalCommand}"
                TextColor="SlateBlue"
                Font="Bold,18"
                x:Name="CloseButton"
                Text="Close"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>