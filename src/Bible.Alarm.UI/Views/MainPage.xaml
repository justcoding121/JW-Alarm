<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bible.Alarm.UI.MainPage"
             Title="Bible Alarm">
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" BackgroundColor="White" x:Name="NavFrame"/>
        <ActivityIndicator x:Name="ProgressRing_Loading" Color="SlateBlue" 
                      Grid.Row="0"
                      IsVisible="True"     
                      IsEnabled="True"
                      IsRunning="True"/>
    </Grid>
</ContentPage>
